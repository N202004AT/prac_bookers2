<%= render 'users/error_messages', book: book %>
<div class="col-xs-3">
<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100,100,format: 'jpeg', fallback:"no_image3.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>
<h1>New book</h1>
<%= form_for(book) do |f|%>
<div class="field row">
<h4>Title</h4>
<%= f.text_field :title %>
</div>
<div class="field row">
<h4>Opinion</h4>
<%= f.text_area :body %>
</div>
<div class="action row">
<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
</div>
</div>
<% end %>